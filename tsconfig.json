{
    "compilerOptions": {
		"target": "es2017",
		"lib": ["dom", "dom.iterable", "esnext"],
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "declaration": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
		"incremental": true,
    },
    "include": [
        "src",
        "package.json",
        "readme.md"
    ],
    "exclude": [
        "node_modules",
        ".gitignore"
    ]
}